<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainerInventario"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:stretchColumns="*"
		android:orientation="vertical">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#ffffff">
			<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
				<TextView
					android:id="@+id/txtConnectedStateInventario"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/connectedState"
					android:textSize="10dp"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:textColor="#000000"
					android:text="@string/area"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/txtAreaLecturaInventario"
					android:gravity="left"
					android:singleLine="true"
					android:visibility="invisible"/>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal"
					android:layout_gravity="center"
					android:gravity="center">
					<Spinner
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textAlignment="center"
						android:spinnerMode="dropdown"
						android:id="@+id/sprAreas"
					
					/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff"
				android:padding="7dp">

				<!-- Total Acumulado -->
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#ffffff"
					android:paddingEnd="8dp">

					<TextView
						android:id="@+id/txtTotalAcumulado"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/totalAcumulado"
						android:textColor="#000000"
						android:textSize="24sp"
						android:autoSizeTextType="uniform"
						android:textStyle="bold"
						android:gravity="center"
						android:layout_marginBottom="4dp"
						android:singleLine="true"/>

					<TextView
						android:id="@+id/txtNumTotalAcumulado"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="0"
						android:textColor="#ffffff"
						android:background="#0440B8"
						android:textSize="24sp"
						android:autoSizeTextType="uniform"
						android:textStyle="bold"
						android:gravity="center"
						android:singleLine="true"/>
				</LinearLayout>

				<!-- Total Cajas LeÃ­das -->
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:background="#ffffff"
					android:paddingStart="8dp">

					<TextView
						android:id="@+id/txtTotalCajasLeidasInventario"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/totalCajasLeidas"
						android:textColor="#000000"
						android:textSize="24sp"
						android:autoSizeTextType="uniform"
						android:textStyle="bold"
						android:gravity="center"
						android:layout_marginBottom="4dp"
						android:singleLine="true"/>

					<TextView
						android:id="@+id/txtNumTotalCajas"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="0"
						android:textColor="#ffffff"
						android:background="#0440B8"
						android:textSize="24sp"
						android:autoSizeTextType="uniform"
						android:textStyle="bold"
						android:gravity="center"
						android:singleLine="true"/>
				</LinearLayout>
			</LinearLayout>



			<Button
				android:layout_margin="7dp"
				android:text="@string/guardar"
				android:textColor="#ffffff"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/buttonaceptarenabled"
				android:id="@+id/btnGuardarInventario"
				android:layout_marginTop="0.0dp"
				android:autoSizeTextType="uniform"
				android:elevation="3dp"
				android:enabled="false"/>
		</LinearLayout>
		<GridView
			android:gravity="center"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:horizontalSpacing="10dp"
			android:verticalSpacing="10dp"
			android:stretchMode="columnWidth"
			android:numColumns="1"
			android:minWidth="25dp"
			android:minHeight="25dp"
			android:layout_weight="1"
			android:smoothScrollbar="true"
			android:id="@+id/gvleidoInventario"
			android:listSelector="@drawable/layerdraw"
			android:drawSelectorOnTop="false"
			android:columnWidth="150dp"
			android:paddingTop="5dp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:paddingBottom="5dp"
			android:background="#dee2e6"/>
	</LinearLayout>
	<RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
		android:visibility="gone"
		android:gravity="center">

		<ProgressBar
            android:id="@+id/progressBarGuardar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
	</RelativeLayout>
</FrameLayout>
